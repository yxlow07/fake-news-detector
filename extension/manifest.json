{
    "manifest_version": 3,
    "name": "Fake News Detector",
    "version": "1.0",
    "description": "A Chrome extension that detects fake news articles using AI.",
    "icons": {
        "128": "logo.png",
        "48": "logo.png",
        "16": "logo.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Fake News Detector"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ]
}